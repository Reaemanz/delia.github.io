<body>
    <!-- Animated background -->
    <div class="heart-bg" id="heartBg"></div>

    <!-- MAIN CARD -->
    <div class="card">
        <h1>Hi Delia üíï</h1>
        <p>I've been wanting to ask you something special.</p>
        <p><strong>Would you like to be my girlfriend?</strong></p>

        <div class="buttons">
            <button class="yes" onclick="showPopup('yes')">Yes</button>
            <button class="no" onclick="showPopup('no')">No</button>
        </div>
    </div>

    <!-- POPUP -->
    <div id="popup" class="popup-overlay">
        <div class="popup-card">
            <h2 id="popup-title"></h2>
            <p id="popup-message"></p>
            <button class="close-btn" onclick="closePopup()">Close</button>
        </div>
    </div>

    <script>
        // Create floating hearts
        const heartBg = document.getElementById('heartBg');
        const hearts = ['üíï', 'üíñ', 'üíó', 'üíì', 'üíù'];
        
        for (let i = 0; i < 15; i++) {
            const heart = document.createElement('div');
            heart.className = 'floating-heart';
            heart.textContent = hearts[Math.floor(Math.random() * hearts.length)];
            heart.style.left = Math.random() * 100 + '%';
            heart.style.animationDelay = Math.random() * 15 + 's';
            heart.style.animationDuration = (15 + Math.random() * 10) + 's';
            heartBg.appendChild(heart);
        }

        // Create twinkling particles
        for (let i = 0; i < 30; i++) {
            const particle = document.createElement('div');
            particle.className = 'particle';
            particle.style.left = Math.random() * 100 + '%';
            particle.style.top = Math.random() * 100 + '%';
            particle.style.animationDelay = Math.random() * 3 + 's';
            heartBg.appendChild(particle);
        }

        async function showPopup(choice) {
            const popup = document.getElementById("popup");
            const title = document.getElementById("popup-title");
            const message = document.getElementById("popup-message");

            // Save her response with timestamp
            try {
                const response = {
                    answer: choice,
                    timestamp: new Date().toISOString(),
                    date: new Date().toLocaleString()
                };
                await window.storage.set('delia-response', JSON.stringify(response), false);
                console.log('Response saved successfully');
            } catch (error) {
                console.error('Error saving response:', error);
            }

            if (choice === "yes") {
                title.textContent = "You made my heart smile üíñ";
                message.textContent =
                    "Thank you for saying yes. This moment means more to me than I can put into words.";
            } else {
                title.textContent = "Thank you for your honesty üíô";
                message.textContent =
                    "I truly respect your answer and appreciate you being sincere.";
            }

            popup.classList.add("active");
        }

        function closePopup() {
            document.getElementById("popup").classList.remove("active");
        }

        // Check for existing response when page loads
        window.addEventListener('DOMContentLoaded', async () => {
            try {
                const stored = await window.storage.get('delia-response', false);
                if (stored && stored.value) {
                    const response = JSON.parse(stored.value);
                    console.log('Previous response found:', response);
                }
            } catch (error) {
                console.log('No previous response found');
            }
        });
    </script>
</body>
